<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp"
    tools:context=".view.fragment.NotifEmergenteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:theme="@style/TextoUsuario"
            android:layout_marginBottom="10dp"
            android:text="@string/notificacionEmergente" />
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rbgNotificacionEmergente"
                    android:theme="@style/AppThemeNotificacionesVentEmergentes"
                    >
                    <RadioButton
                        android:text="@string/nuncaMostrar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:id="@+id/rbNuncaMostrar"
                        />
                    <RadioButton
                        android:text="@string/soloPantallaEncendida"
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:id="@+id/rbPantallaEncendida" />
                    <RadioButton
                        android:text="@string/soloPantallaApagada"
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:id="@+id/rbPantallaApagada" />
                    <RadioButton
                        android:text="@string/siempreMostrarVentEmerg"
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:id="@+id/rbMostrarVentanaEmergente" />
                </RadioGroup>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="@string/cancelar"
                    android:paddingTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange_button_dark"
                    android:layout_alignParentRight="true"
                    android:id="@+id/textCancelar" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
