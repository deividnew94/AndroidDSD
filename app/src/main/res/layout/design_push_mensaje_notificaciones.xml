<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingDctoPadre"
            android:orientation="horizontal"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">
                <android.support.v7.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="@dimen/paddingDcto"
                    app:cardCornerRadius="10dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:id="@+id/photoRestauranteN"
                       android:layout_alignParentTop="true"
                        android:src="@mipmap/background_login"
                        />
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:layout_toRightOf="@+id/photoRestaurante"
                android:layout_weight="0.95">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nombreRestauranteN"
                    android:layout_alignParentTop="true"
                    android:textSize="@dimen/nombreRestaurante"
                    android:ellipsize="start"
                    android:ems="28"
                    android:textColor="@color/nombreRestaurante"
                    android:text="Fiesta Gourmet Restaurtant"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/restauranteN"
                    android:text="RESTAURANTE"
                    android:layout_marginTop="@dimen/marginDcto"
                    android:textSize="@dimen/textoSmalDscto"
                    android:layout_below="@+id/nombreRestaurante"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/marginDcto"
                    android:layout_marginRight="@dimen/marginDcto">

                    <android.support.v7.widget.AppCompatRatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="3.5"
                        android:theme="@style/RatingBar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:isIndicator="true"
                        android:id="@+id/appCompatRatingBarDctoN" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/ratingTextN"
                        android:textColor="@color/ratingText"
                        android:text="3.5"
                        android:maxLines="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:layout_marginTop="@dimen/marginDcto"
                    >

                    <ImageView
                        android:layout_width="@dimen/tama単oIconsDcto"
                        android:layout_height="@dimen/tama単oIconsDcto"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_reloj"
                        android:layout_marginRight="@dimen/marginDctoIcons"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/azulDscto"
                        android:layout_marginRight="@dimen/marginabierto"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/abiertoN"
                        android:textSize="@dimen/textoSmalDscto"
                        android:text="ABIERTO"
                        />

                    <ImageView
                        android:layout_width="@dimen/tama単oIconsDcto"
                        android:layout_height="@dimen/tama単oIconsDcto"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_position"
                        android:layout_marginRight="@dimen/marginDctoIcons"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/azulDscto"
                        android:layout_marginRight="@dimen/marginDctoIcons"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/positionN"
                        android:textSize="@dimen/textoSmalDscto"
                        android:text="a km - Miraflores"
                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="right"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/horaDsctoN"
                    android:visibility="gone"
                    android:layout_marginBottom="10dp"
                    android:textSize="@dimen/textoSmalDscto"
                    android:text="AHORA"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@mipmap/ticket"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ticketN"
                        android:textSize="@dimen/textoTicketDscto"
                        android:text="100%"
                        android:textColor="@color/ticketText"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dctoN"
                        android:textColor="@color/ticketText"
                        android:textSize="@dimen/textoDscto"
                        android:text="DCTO"
                        />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|right">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/favoritoN"
                        android:src="@drawable/ic_favorito_plomo"

                        />
                </LinearLayout>




            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/linerview"
        android:layout_gravity="bottom"/>

</LinearLayout>
