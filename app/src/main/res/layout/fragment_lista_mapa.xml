
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparente"
    tools:context=".view.fragment.ListaMapaFragment"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/heithTolba"
        android:id="@+id/toolbarMapDisfruta"
        android:background="@color/red_tab_selected_icon"
        android:elevation="@dimen/elevation_toolbar"
        android:padding="10dp"
        android:gravity="center"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"

        >

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/boton_search"
            android:visibility="gone"
            android:background="@drawable/selector_maps_disfruta"
            android:src="@drawable/ic_search_black_18px"/>

        <com.example.library.SegmentedGroup
            xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
            android:id="@+id/segmentedGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            segmentedgroup:sc_tint_color="@color/segmentedGroup"
            segmentedgroup:sc_unchecked_tint_color="@color/white"
            segmentedgroup:sc_checked_text_color="@color/white"
            segmentedgroup:sc_border_width="0dp"
            segmentedgroup:sc_corner_radius="20dp">

            <RadioButton
                android:id="@+id/listadisfruta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Lista"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/mapadisfruta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Mapa"
                style="@style/RadioButton" />
        </com.example.library.SegmentedGroup>


        <ImageView

            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_gravity = "right"
            android:background="@drawable/selector_maps_disfruta"
            android:id="@+id/boton_tuner"
            android:src="@drawable/ic_tune_black_18px"
            android:padding="10dp"
            />



    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/heithTolba"
        android:id="@+id/spaceTop"
        android:background="@color/transparente"
        android:orientation="horizontal"/>


    <FrameLayout
        android:id="@+id/fragment_base"
        android:layout_below="@+id/spaceTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        ></FrameLayout>

    <FrameLayout
