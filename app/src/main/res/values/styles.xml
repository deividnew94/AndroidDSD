<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeSlide" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimarySlide</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkSlide</item>
        <item name="colorAccent">@color/orange_button_dark</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">#1D81ED</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="subTituloFiltro">
        <item name="android:textColor">@color/griss_titulos_filtros</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppThemeNotificacionesVentEmergentes" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/red_toolbar</item>

    </style>
    <!--Customize Buscar en Disfruta-->
    <!-- Base application theme. -->
    <style name="AppThemeBuscarEnDisfruta" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/red_toolbar</item>
        <item name="colorAccent">@color/text_color</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grayRatingBar</item>
        <item name="colorControlActivated">@color/yellowRatingBar</item>
        <item name="actionBarSize">?android:attr/actionBarSize</item>
        <item name="android:stepSize">0.5</item>
    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@color/orange_button_dark</item>
    </style>

    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
    </style>

    <style name="AppThemeFiltrar" parent="Theme.AppCompat.Light">

        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>
    </style>

    <style name="YourDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <!--<item name="android:colorAccent">@color/colorPrimary</item>-->
        <item name="android:textColor">@color/orange_titulos</item>
        <item name="android:textColorPrimary">@color/blue_toolbar</item>
    </style>

    <style name="AppThemeRegionesLogin" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/red_toolbar</item>

    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>

    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">#78393939</item>

    </style>

    <style name="TextoUsuario">
        <item name="android:typeface">normal</item>
        <item name="android:textColor">
            #000000
        </item>

    </style>


    <style name="ValueUsuario">

        <item name="android:typeface">normal</item>
        <item name="android:textSize">15sp</item>

    </style>

    <!--Fragment Usuario-->

    <style name="ValueUsuarioCelular">

        <item name="android:typeface">normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/celular</item>

    </style>

    <!--Tab_Push_Mensaje-->
    <style name="Theme.TrickMarket" parent="Base.AppTheme" />


    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="SampleTheme" parent="Theme.AppCompat">
        <item name="colorAccent">@color/orange_button_dark</item>
        <item name="android:textColorSecondary">@color/text_terminos_condiciones</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/color_fondo</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


    <color name="color_fondo">#E6000000</color>
</resources>
